<?xml version="1.0" encoding="utf-8"?>

<!-- Copyright Karl Jones 2016 -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.karl.fragments.GoalsFragment"
        android:orientation="vertical">

        <!-- Calories -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <EditText
                android:maxLength="55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:fontFamily="sans-serif"
                android:id="@+id/goals_calories"
                android:hint="@string/calories"
                android:inputType="textCapWords|numberDecimal"
                android:imeOptions="actionNext"
                />
        </android.support.design.widget.TextInputLayout>

        <!-- Fat -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <EditText
                android:maxLength="55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:fontFamily="sans-serif"
                android:id="@+id/goals_fat"
                android:hint="@string/fat"
                android:inputType="textCapWords|numberDecimal"
                android:imeOptions="actionNext"
                />
        </android.support.design.widget.TextInputLayout>

        <!-- Sat Fat -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <EditText
                android:maxLength="55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:fontFamily="sans-serif"
                android:id="@+id/goals_sat_fat"
                android:hint="@string/saturated_fat"
                android:inputType="textCapWords|numberDecimal"
                android:imeOptions="actionNext"
                />
        </android.support.design.widget.TextInputLayout>

        <!-- Salt -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <EditText
                android:maxLength="55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:fontFamily="sans-serif"
                android:id="@+id/goals_salt"
                android:hint="@string/salt"
                android:inputType="textCapWords|numberDecimal"
                android:imeOptions="actionNext"
                />
        </android.support.design.widget.TextInputLayout>

        <!-- Sodium -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <EditText
                android:maxLength="55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:fontFamily="sans-serif"
                android:id="@+id/goals_sodium"
                android:hint="@string/sodium"
                android:inputType="textCapWords|numberDecimal"
                android:imeOptions="actionNext"
                />
        </android.support.design.widget.TextInputLayout>

        <!-- Carbohydrates -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <EditText
                android:maxLength="55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:fontFamily="sans-serif"
                android:id="@+id/goals_carbohydrates"
                android:hint="@string/carbohydrate"
                android:inputType="textCapWords|numberDecimal"
                android:imeOptions="actionNext"
                />
        </android.support.design.widget.TextInputLayout>

        <!-- Sugar -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <EditText
                android:maxLength="55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:fontFamily="sans-serif"
                android:id="@+id/goals_sugar"
                android:hint="@string/sugar"
                android:inputType="textCapWords|numberDecimal"
                android:imeOptions="actionNext"
                />
        </android.support.design.widget.TextInputLayout>

        <!-- Protein -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <EditText
                android:maxLength="55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:fontFamily="sans-serif"
                android:id="@+id/goals_protein"
                android:hint="@string/protein"
                android:inputType="textCapWords|numberDecimal"
                android:imeOptions="actionNext"
                />
        </android.support.design.widget.TextInputLayout>

        <!-- Save button -->
        <Button
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/save_changes"
            android:id="@+id/save_changes_goals"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>