<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="android.karl.fragments.DiaryFragment" android:orientation="vertical">

    <!-- Title for todays entries -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/diary_fragment_todays_entries"
        android:id="@+id/today_entries_title"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <!-- List of todays entries -->
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/today_chart_information"
        />
</LinearLayout>
