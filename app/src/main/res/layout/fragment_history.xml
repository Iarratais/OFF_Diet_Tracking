<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/history_list">

    </ListView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nothing_to_show_history"
        android:src="@drawable/ic_restore_black_48dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:tint="#999999"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/there_is_nothing_here"
        android:id="@+id/nothing_to_show_text_history"
        android:layout_below="@+id/nothing_to_show_history"
        android:layout_centerHorizontal="true"
        android:textColor="#999999"
        android:textAlignment="center"
        android:visibility="gone"/>
</RelativeLayout>