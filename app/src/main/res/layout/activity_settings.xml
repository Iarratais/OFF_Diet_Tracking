<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.karl.fyp.SettingsActivity">

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_show_full_days"
        android:id="@+id/show_days"
        android:layout_alignParentTop="true"
        android:textSize="22dp"
        android:thumbTint="@color/colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/settings_show_full_days_explained"
        android:id="@+id/show_days_explained"
        android:layout_below="@+id/show_days"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:paddingEnd="75dp" />

    <View
        android:layout_below="@id/show_days_explained"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/light_grey" />
</RelativeLayout>
