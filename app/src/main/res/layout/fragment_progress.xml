<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.karl.fragments.ProgressFragment">


    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/weight_progress_list">
    </ListView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nothing_to_show_diary"
        android:src="@drawable/ic_timeline_black_48dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:tint="#999999"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/there_is_nothing_here"
        android:id="@+id/nothing_to_show_text_diary"
        android:layout_below="@+id/nothing_to_show_diary"
        android:layout_centerHorizontal="true"
        android:textColor="#999999"
        android:textAlignment="center"
        android:fontFeatureSettings="smcp"
        android:visibility="gone"/>
</RelativeLayout>
